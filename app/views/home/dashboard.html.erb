
			<div class="col-sm-12">
				<h3 class="text-uppercase text-left">My Dashboard</h3>
				<h5 class="bold-title">Hello, <%= @customer.name %>!</h5>
				<p>
					From your My Account Dashboard you have the ability to view a snapshot of your recent account activity and update your account information. 
				</p>

				<h4 class="text-uppercase highlight-title margin-top-30">Account Information</h3>
				<div class="row">
					<div class="col-sm-6">
						<address>
							<%= @customer.name %>
							<br>
							<%= @customer.email %>
							<br> 
						</address>
					</div> 
					<div class="col-sm-6">
						<h5 class="bold-title text-uppercase"><a href="/edit_address" class="btn btn-link pull-right">Edit</a></h5>
					</div>
				</div>
				
				 <% if @customer_card %>
					Your Card Details:
					<br />
					<br />
					<div class="row">
						<div class="col-sm-6">
							<div class="col-sm-12">
								<div class="col-sm-4">
									Name:
								</div>
								<div class="col-sm-3">
									<%= @customer_card.card_name %>	
								</div>
							</div> 
							<div class="col-sm-12">
								<div class="col-sm-4">
									Number: 
								</div>
								<div class="col-sm-8">
									XXXX XXXX XXXX <%= @customer_card.card_number.split(//).last(4).join %>		
								</div>
							</div> 
							
							<div class="col-sm-12">
								<div class="col-sm-4">
									CVV:
								</div>
								<div class="col-sm-3">
									<%= @customer_card.ccv%>
								</div>
							</div> 
							
							<div class="col-sm-12">
								<div class="col-sm-4">
									Exp Month:
								</div>
								<div class="col-sm-3"> 
									<%= @customer_card.exp_month%>/<%= @customer_card.exp_year%>
								</div>
							</div>  
						</div>
					
 
						<div class="col-sm-6">
							<h5 class="bold-title text-uppercase"><a href="/edit_address" class="btn btn-link pull-right">Edit</a></h5>
						</div>
						<br />
						<br />
					</div>
					
				<%end%>
				<br />
				<h4 class="text-uppercase highlight-title">Address Book</h3>
				<div class="row">
					<div class="col-sm-6">
						<h5 class="bold-title text-uppercase">Billing Address</h5>
						<address>  
							<%= @customer.name %>
							<br>
							<%= @customer.address1 %>
							<% if @customer.address2.present? %>
								<%= @customer.address2 %>
								<br/>
							<% end %>
							<br>
							<%= "#{@customer.city}, #{@customer.state} #{@customer.zip} #{get_country_name(@customer.country, false)}" %>
							<br> 
						</address>
					</div>
					<div class="col-sm-6">
						<h5 class="bold-title text-uppercase"><a href="/edit_address" class="btn btn-link pull-right">Edit</a></h5>
						
						<h5 class="bold-title text-uppercase">Shipping Address</h5>
						<address>  
							<%= @customer.billing_first_name %> <%= @customer.billing_last_name %>
							
							<br>
							<%= @customer.billing_address1 %>
							<br/>
							<% if @customer.billing_address2.present? %>
								<%= @customer.billing_address2 %>
								<br/>
							<% end %>
							<%= "#{@customer.billing_city}, #{@customer.billing_state} #{@customer.billing_zip} #{get_country_name(@customer.billing_country, false)}" %>

							<br> 
						</address>
					</div>
				</div>
			</div>