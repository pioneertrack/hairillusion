<div class="col-md-offset-2 col-md-4 checkoutForm" style="color: #fff">
	<h2>Wholesaler Login</h2>
	<%= form_tag(login_distributors_path, html: { id: 'login_distributor', :class => 'form-horizontal' }) do -%>
	<%= control_group(nil, :email, label: 'Email') do %>
	<%= email_field_tag :email, nil, class: 'form-control required' %>
	<% end %>

	<%= control_group(nil, :password, label: 'Password') do %>
	<%= password_field_tag :password, nil, class: 'form-control required' %>
	<% end %>

	<div class="form-group">
		<div style="text-align:center;" class="col-md-12"> 
			<%= submit_tag "Login", :class=>"btn btn-info", "data-disabled-with"=>"Logging in..." %>  
 
			<div id="login-submit-spinner" style="display:none">
				<h4>Please Wait <%= image_tag 'ajax-loader.gif' %></h4>
			</div>
		</div>
	</div>
	<% end -%>
	<br />
	<div class="clearfix"></div>
	<br />
	
	<% if @error && !@error.blank? %> 
		<h5 style="color: #ff0000"><%=@error%></h5>
	<%end%> 
	<br />
	<br />
	<div class="form-group" style="width: 100%;text-align: center">
		<%= link_to "Forgot password?", "/forgot_password", :style=>";color: #fff;font-size:14px"%>
	</div>
	<br/>
	<br/>
	<br/>
	<br/>
</div>
