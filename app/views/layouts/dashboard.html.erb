<!DOCTYPE html>
<html>
<head>
  <title>HAIR ILLUSION OFFICIAL WEBSITE.</title> 
  <%= stylesheet_link_tag "application", media: "all" %> 
  <%= stylesheet_link_tag "styles", media: "all" %> 
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
  <script>
!function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod?
n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;
n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;
t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)}(window,
document,'script','https://connect.facebook.net/en_US/fbevents.js'); 
fbq('init', '992721714140422');
fbq('track', "PageView");</script>
<noscript><img height="1" width="1" style="display:none"
src="https://www.facebook.com/tr?id=992721714140422&ev=PageView&noscript=1"/>
</noscript>

<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
	
	<div class="top">
      <div class="container">
        <ul class="list-inline pull-right"> 
          <li><i class="glyphicon glyphicon-globe"></i> Worldwide shipping available</li>
          <% unless @customer %>
         	 <li><a href="/login">Login / Register</a></li>
          <%else%>
          	<li><a href="/dashboard">My Dashboard</a></li>
          	<li><a href="/sign_out">Logout</a></li>
          <% end %>
          <li><a href="/cart"><%= product_count %> items (s)</a></li>
        </ul>
      </div>
    </div>
    <nav class="navbar navbar-default hi-navbar">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#hi-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button> 
          <%= link_to(image_tag('logo.png'), root_path, class: "navbar-brand") %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right" id="hi-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/products">our products</a></li>
            <li><a href="/photos">gallery</a></li>
            <li><a href="/faq">faq</a></li>
            <li><a href="/what_is_it">about</a></li>
            <li><a href="/more_reviews">testimonials</a></li>
            <li><a href="/contact_us">contact us</a></li>
            <li><a href="/distributors/new">Wholesalers</a></li>
          </ul>
          
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="row" style="background-color: #fff;padding:10px;">
    <div class="col-md-12">
    	
    	<div class="col-sm-3">
            <div class="list-group">
              <a href="/dashboard" class="list-group-item <%=get_active_css('dashboard')%>">Dashboard</a> 
              <a href="/past_orders" class="list-group-item <%=get_active_css('past_orders')%>">My Past Orders</a>
              <a href="/auto_ship" class="list-group-item <%=get_active_css('auto_ship')%>">Autoship Details</a>
              <a href="/sign_out" class="list-group-item">Logout</a> 
            </div>
          </div>
          <div class="col-sm-9">
          	<%= yield %>
          </div> 
    </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
          	<img src="/assets/footer-logo.png"> &copy; 2016 Hair Illusion LLC | Contact Us</div>
          <div class="col-sm-6 text-right">
          	<a href="http://instagram.com/hairillusionllc?ref=badge">
          		<img src="/assets/footer-social.png">
          	</a>
          </div>
        </div>
      </div>
    </footer>
</body>
</html>
