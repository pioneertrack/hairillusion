<script type="text/javascript">
	function onClickBuy() {
		if ($("#products_size").val() > 0) {
			var win = window.open($("#buy_url").val(), '_blank');
			if (win) {
				win.focus();
			} else {
				alert('Please allow popups for this site');
			}
		} else {
			alert('Please select the color + quantity and add to cart. Then click on Buy Now.');
		}
	}

	function onAddProduct(e, type) {
		product_type = type;
		product_name = "";
		quantity = 1
		if (product_type == 'upsell') {
			product_name = "Fibre hold(Upsell)";
			quantity = $("#upsell_quantity").val(),
		} else {
			product_name = $("#color_selector :selected").text();
			quantity = $("#quantity").val(),
		}
		$.ajax({
			url : "/add_to_cart",
			data : {
				quantity : quantity,
				product : product_name,
				product_id : $("#color_selector").val(),
				unit_price : 49.95,
				referel : 'hairillusion.net',
				product_type : product_type,
				upsell_qty : $("#upsell_quantity").val(),
				upsell_id : 3066968513
			}
		});
		e.preventDefault();
		e.stopPropagation();
	}

	function removeProduct(e, product) {
		$.ajax({
			url : "/remove_from_cart",
			data : {
				product : product, 
				unit_price : 49.95,
				product_id : $("#color_selector").val(),
				referel : 'hairillusion.net'
			}
		});
		e.preventDefault();
		e.stopPropagation();
	}
</script>
